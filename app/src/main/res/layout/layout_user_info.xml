<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivuserphoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/myoto" />

            <TextView
                android:id="@+id/tvceng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="【第1层】" />

            <TextView
                android:id="@+id/tvgold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="金币: 200" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivxin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/xin" />

            <TextView
                android:id="@+id/tvxueliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/ivxin"
                tools:text="1000" />

            <ImageView
                android:id="@+id/ivgongji"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/ivxin"
                android:layout_marginLeft="4dp"
                android:src="@drawable/tubiaogongji" />

            <TextView
                android:id="@+id/tvgongji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivxin"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/ivgongji"
                tools:text="50" />

            <ImageView
                android:id="@+id/ivfangyu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/ivgongji"
                android:layout_marginLeft="4dp"
                android:src="@drawable/fangyutubiao" />

            <TextView
                android:id="@+id/tvfangyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivgongji"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/ivfangyu"
                tools:text="10" />

            <TextView
                android:id="@+id/tvdengji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivfangyu"
                android:layout_marginLeft="4dp"
                tools:text="等级:1" />

            <TextView
                android:id="@+id/tvjingyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvdengji"
                tools:text="经验: 100" />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <ImageView
            android:id="@+id/ivyellowkey"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/yellokey" />

        <TextView
            android:id="@+id/tvyellokey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivyellowkey"
            tools:text="1" />

        <ImageView
            android:id="@+id/ivbluekey"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bluekey" />

        <TextView
            android:id="@+id/tvbluekey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivbluekey"
            tools:text="1" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/tvredkey"
            android:src="@drawable/redkey" />

        <TextView
            android:id="@+id/tvredkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="1" />
    </RelativeLayout>

</LinearLayout>
